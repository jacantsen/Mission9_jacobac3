@{
}
@model IEnumerable<string>
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary btn-block">Home </a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@t" asp-route-pageNum="1"
           
           class="btn @(ViewBag.SelectedCategory == t ? "btn-primary btn-block" : "btn-outline-secondary btn-block")">@t</a>
    }
</div>
