@{

}
@model Book
<!--In the div below I added this class for the shadow: shadow-lg p-3 mb-5 bg-white rounded-->
<div class="card card-outline-primary m-1 p-1 shadow-lg p-3 mb-5 bg-white rounded">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>Price: @Model.Price</small>
            </span>
        </h4>
    </div>
    <ul>
        <li class="card-text p-1 ">Author: @Model.Author</li>
        <li class="card-text p-1">Publisher: @Model.Publisher</li>
        <li class="card-text p-1">ISBN: @Model.Isbn</li>
        <li class="card-text p-1">Classification: @Model.Classification</li>
        <li class="card-text p-1">Category: @Model.Category</li>
        <li class="card-text p-1">Number of Pages: @Model.PageCount</li>
    </ul>
    <form method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Add to Cart</button>
        </span>
    </form>
</div>

